<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EFEFEF"
        android:padding="20dp"
        tools:context=".ui.nav_menu.profil.ProfileFragment">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/profileImage"
                    android:layout_marginTop="20dp"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/nimTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profileImage"
                    android:text="165150xxxxxxxxx"
                    android:layout_marginBottom="9dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp"
                    android:textSize="20sp"/>

                <View
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/pembatas"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color"
                    android:layout_below="@+id/nimTv"/>

                <TextView
                    android:id="@+id/namaTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/pembatas"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="18dp"
                    android:text="NAMA LENGKAP"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/fakultasTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/namaTv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="18dp"
                    android:layout_marginTop="4dp"
                    android:text="Fakultas Ilmu Komputer"
                    android:textSize="14sp" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <Button
            android:id="@+id/keluarBtn"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardView"
            android:textColor="@android:color/white"
            android:text="Log Out"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:background="@drawable/button_background"/>

</RelativeLayout>