<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tool="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_marginBottom="2dp">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

            <ImageView
                    android:id="@+id/cabor_icon"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="16dp"
                    android:src="@drawable/ic_sport"/>

            <TextView
                    android:id="@+id/cabor_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cabor_icon"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_toStartOf="@id/detail_cabor"
                    android:layout_toLeftOf="@id/detail_cabor"
                    android:gravity="center"
                    android:textColor="#000"
                    android:fontFamily="@font/gothammedium"
                    android:textSize="10sp"
                    android:text="Bulutangkis" />

            <LinearLayout
                    android:id="@+id/detail_cabor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/cabor_icon"
                    android:layout_toRightOf="@id/cabor_icon"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/nama_jadwal"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:fontFamily="@font/gothammedium"
                        tool:text="16 Besar"/>

                <TextView
                        android:id="@+id/cabor_keterangan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="#8A000000"
                        android:fontFamily="@font/gothambook"
                        android:textSize="12sp"
                        tool:text="Babak Penyisihan Putra" />

                <!--Start cabor versus-->
                <RelativeLayout
                        android:id="@+id/cabor_versus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                            android:id="@+id/team1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:orientation="vertical">

                        <ImageView
                                android:id="@+id/cardScore_team1Res"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@mipmap/ic_feb" />

                        <TextView
                                android:id="@+id/cardScore_team1Nama"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Filkom"
                                android:fontFamily="@font/gothambook"
                                android:textSize="10sp" />

                    </LinearLayout>

                    <TextView
                            android:id="@+id/cardScore_team1Score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="4dp"
                            android:layout_toRightOf="@id/team1"
                            android:text="0"
                            android:textSize="12sp" />

                    <TextView
                            android:id="@+id/card_versus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="4dp"
                            android:layout_toRightOf="@id/cardScore_team1Score"
                            android:text="-" />

                    <TextView
                            android:id="@+id/cardScore_team2Score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/card_versus"
                            android:gravity="center_vertical"
                            android:text="0"
                            android:textSize="12sp" />

                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="14dp"
                            android:layout_toRightOf="@id/cardScore_team2Score"
                            android:gravity="center"
                            android:orientation="vertical">

                        <ImageView
                                android:id="@+id/cardScore_team2Res"
                                android:layout_width="27dp"
                                android:layout_height="27dp"
                                android:src="@mipmap/ic_fapet" />

                        <TextView
                                android:id="@+id/cardScore_team2Nama"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Filkom"
                                android:fontFamily="@font/gothambook"
                                android:textSize="10sp" />

                    </LinearLayout>

                </RelativeLayout>
                <!--End cabor versus-->

                <TextView
                        android:id="@+id/cabor_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:textColor="#61000000"
                        android:fontFamily="@font/gothambook"
                        android:textSize="12sp"
                        tool:text="10-10-2019 | 09:00" />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="9dp">

                    <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginLeft="-2dp"
                            android:layout_marginRight="2dp"
                            android:src="@mipmap/ic_location" />

                    <TextView
                            android:id="@+id/cabor_place"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/oren"
                            android:fontFamily="@font/gothammediumitalic"
                            tool:text="GOR" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                    android:id="@+id/icon_favorit"
                    android:layout_width="21dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="8dp"
                    android:src="@mipmap/ic_favorit"
                    android:layout_marginEnd="8dp"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>